<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFEFEF"
    android:layout_margin="@dimen/_8sdp"

    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txt_medical_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="يعاني من الحساسية تجاه الادوية التي تحتوي على الدوكلوفين"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        android:padding="@dimen/_8sdp"
        android:fontFamily="@font/tajawal_regular"
        android:textAlignment="viewEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/txt_medical_record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/txt_medical_record"
        app:layout_constraintStart_toStartOf="@id/txt_medical_record"

        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:background="#BCBABA"
        />

</androidx.constraintlayout.widget.ConstraintLayout>