<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.MyAccountFragment">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/image_doctor_profile"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_100sdp"
    android:src="@drawable/docotor_image"
    android:layout_marginTop="@dimen/_24sdp"

    android:layout_gravity="center"
    />

    <TextView
        android:id="@+id/txt_docto_namer_profile"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="د.محمد زقوت"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"

        android:layout_marginTop="@dimen/_8sdp"

        />

    <TextView
        android:id="@+id/txt_docto_cv_profile"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:text="محمد زقوت حاصل على ماجستير في تخصص علم النفس لدي  خبرة لمدة 5 سنوات أتمنى أن أكون عند حسن ظنكم"
        android:padding="@dimen/_12sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_16sdp"

        android:layout_marginEnd="@dimen/_16sdp"
        android:backgroundTint="#A8DADC"
        android:background="@drawable/button_background"

        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_update_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:cardElevation="@dimen/_12sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تعديل المعلومات الشخصية"
            android:padding="@dimen/_12sdp"
            android:drawableEnd="@drawable/ic_profile"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@drawable/ic_baseline_keyboard_arrow_left_24"


            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardElevation="@dimen/_12sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الرصيد والسحب"
            android:padding="@dimen/_12sdp"
            android:drawableEnd="@drawable/ic_card"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@drawable/ic_baseline_keyboard_arrow_left_24"


            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardElevation="@dimen/_12sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="من نحن"
            android:padding="@dimen/_12sdp"
            android:drawableEnd="@drawable/ic_who"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@drawable/ic_baseline_keyboard_arrow_left_24"

            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardElevation="@dimen/_12sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="من نحن"
            android:padding="@dimen/_12sdp"
            android:drawableEnd="@drawable/ic_sms_tracking"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@drawable/ic_baseline_keyboard_arrow_left_24"

            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSignOu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardElevation="@dimen/_12sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" تسجيل الخروج"
            android:padding="@dimen/_12sdp"
            android:drawableEnd="@drawable/ic_login"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@drawable/ic_baseline_keyboard_arrow_left_24"

            />

    </androidx.cardview.widget.CardView>
</LinearLayout>