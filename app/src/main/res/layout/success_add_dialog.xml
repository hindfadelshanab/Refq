<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:background="@android:color/transparent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear_accept_or_cancel"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="@dimen/_24sdp"
        app:layout_constraintStart_toStartOf="parent"


        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/order_added"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_16sdp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/txt_dialog"
            android:paddingStart="@dimen/_32sdp"
            android:paddingEnd="@dimen/_32sdp"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_12sdp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back_to_home"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/white"

            android:layout_gravity="center"
            android:textSize="@dimen/_16ssp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:text="العودة الي الرئيسية"

            />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/ic_icon_check"
        app:layout_constraintBottom_toTopOf="@id/linear_accept_or_cancel"
        app:layout_constraintEnd_toEndOf="@id/linear_accept_or_cancel"
        app:layout_constraintStart_toStartOf="@id/linear_accept_or_cancel"
        app:layout_constraintTop_toTopOf="@id/linear_accept_or_cancel"

        app:civ_border_color="#FFF"
        app:civ_border_width="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>