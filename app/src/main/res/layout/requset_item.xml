<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4sdp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_doctor_request"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            tools:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <TextView
            android:id="@+id/txt_doctor_name_request"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toStartOf="@id/image_doctor_request"
            app:layout_constraintTop_toTopOf="@id/image_doctor_request"
            android:layout_marginEnd="@dimen/_12sdp"
            tools:text="د.محمد"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"

            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/txt_doctor_address_request"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="غزة,  مفترق الصناعة "
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="@id/txt_doctor_name_request"
            app:layout_constraintTop_toBottomOf="@id/txt_doctor_name_request"
            />

        <ImageView
            android:id="@+id/imge_start_chat"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16ssp"
            android:src="@drawable/ic_chat_req"

            />

        <TextView
            android:id="@+id/txt_docotr_cv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"

            android:fontFamily="@font/tajawal_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/image_doctor_request"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_doctor_request"

            tools:text="النبذة الشخصية للممرض \الدكتور تكون ه هنا" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>