<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.SignScreen.CompleteSignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"

            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/compelet_sifn_proccess"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="end"
                android:src="@drawable/back_arrow"

                app:tint="@color/black" />
        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:src="@drawable/docotor_image"



            />

        <TextView
            android:id="@+id/txt_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:padding="@dimen/_6sdp"
            android:background="@drawable/add_image_text_background"
            android:text="اضافة صورة شخصيىة"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="الاسم  الأول"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/input_firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:hint="اسمك الاول"
                android:padding="@dimen/_8sdp"
                android:textAlignment="viewEnd"

                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="العائلة"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:cardCornerRadius="8dp"
            >

            <EditText
                android:id="@+id/input_family"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:hint="اسم عائلتك"
                android:padding="@dimen/_8sdp"
                android:textAlignment="viewEnd"

                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="تاريخ الميلاد"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"

            >

            <EditText
                android:id="@+id/input_doctor_date"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:drawableEnd="@drawable/ic_calendar"

                android:drawablePadding="@dimen/_8sdp"
                android:hint="00/00/0000"
                android:padding="@dimen/_8sdp"
                android:textAlignment="viewEnd"




                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="رقم الجوال"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:cardCornerRadius="8dp"
     >

            <EditText
                android:id="@+id/input_doctor_phone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"


                android:drawablePadding="@dimen/_8sdp"
                android:hint="00000000"
                android:padding="@dimen/_8sdp"
                android:textAlignment="viewEnd"

                />
        </androidx.cardview.widget.CardView>












        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="التخصص"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:cardCornerRadius="8dp"
          >

            <EditText
                android:id="@+id/input_doctor_speac"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"

                android:drawablePadding="@dimen/_8sdp"
                android:hint="عنوان تخصصك"
                android:padding="@dimen/_8sdp"
                android:textAlignment="viewEnd"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="المدينة"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            >

            <EditText
                android:id="@+id/input_doctor_city"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"

                android:drawablePadding="@dimen/_8sdp"
                android:hint="مدينتك"
                android:padding="@dimen/_8sdp"
                android:textAlignment="viewEnd"

                />
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="الشارع"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            >

            <EditText
                android:id="@+id/input_doctor_address"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"

                android:drawablePadding="@dimen/_8sdp"
                android:hint="الشارع"
                android:padding="@dimen/_8sdp"
                android:textAlignment="viewEnd"

                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="نبذة شخصية"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            >

            <EditText
                android:id="@+id/input_doctor_cv"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/_150sdp"

                android:background="@color/white"

                android:drawablePadding="@dimen/_8sdp"
                android:hint="نبذة مختصرة "
                android:padding="@dimen/_8sdp"
                android:textAlignment="viewEnd"


                />
        </androidx.cardview.widget.CardView>


        <Button
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="تم"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:background="@drawable/button_background"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:id="@+id/btn_done"
            />


    </LinearLayout>

</ScrollView>