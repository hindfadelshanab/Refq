<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Older.OrderDetialsActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الطلب الخاص بي"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_18ssp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/card_details"

        />

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
        android:id="@+id/card_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_constraintTop_toBottomOf="@id/txt"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#EFEFEF"
        android:layout_margin="@dimen/_12sdp"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_12sdp"
            >

            <TextView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:backgroundTint="#ECECEC"
                android:padding="@dimen/_4sdp"
                tools:text ="5 / 10"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/_12sdp"
                android:drawableStart="@drawable/person"
                android:drawablePadding="@dimen/_4sdp"
                android:layout_weight="1"

                />

            <TextView
                android:id="@+id/txt_service_type"
                android:layout_weight="3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="الرعاية الصحية"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_12sdp"


                />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text ="8 اغسطس"
            android:drawableEnd="@drawable/ic_date"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="@dimen/_12sdp"
            >

            <TextView
                android:id="@+id/txt_order_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text ="8:00"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/_16ssp"

                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:drawablePadding="@dimen/_12sdp"



                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text ="موعد بدأ الطلب"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"

                android:drawableEnd="@drawable/ic_ico___24___actions___time"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:drawablePadding="@dimen/_12sdp"


                />


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            >

            <TextView
                android:id="@+id/txt_order_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text ="8:00"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/_16ssp"

                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:drawablePadding="@dimen/_12sdp"



                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text ="موعد انتهاء الطلب"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"

                android:drawableEnd="@drawable/ic_ico___24___actions___time"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:drawablePadding="@dimen/_12sdp"


                />


        </LinearLayout>


<!--        <Button-->
<!--            android:id="@+id/btn_show_added_orders"-->
<!--            android:layout_width="@dimen/_200sdp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/button_background"-->
<!--            android:textStyle="bold"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:layout_marginBottom="@dimen/_16sdp"-->
<!--            android:textColor="@color/white"-->
<!--            android:layout_gravity="center"-->
<!--            android:text="العروض المضافة"-->
<!--            android:textSize="@dimen/_16ssp"-->
<!--            />-->


    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_add_more_medical_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="العروض"

        app:layout_constraintTop_toBottomOf="@id/card_details"
        android:textSize="@dimen/_18ssp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:textColor="@color/black"


        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/requestRc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/txt_add_more_medical_record"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_12sdp"
        tools:listitem="@layout/requset_item"
        android:layout_marginEnd="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>