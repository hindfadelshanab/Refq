<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.SignScreen.SignAsActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_120sdp"
        android:src="@drawable/logorefg"
        android:scaleType="center"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignAsDoctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_32sdp"
        android:text="@string/doctor"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/secodryColor"
        android:padding="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="@dimen/_32sdp"


        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignAsOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_16ssp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/button_background"
        android:padding="@dimen/_8sdp"
        android:text="@string/older"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSignAsDoctor"


        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>